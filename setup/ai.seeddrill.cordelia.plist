<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>ai.seeddrill.cordelia</string>

    <key>ProgramArguments</key>
    <array>
        <string>__HOME__/.cordelia/bin/cordelia-node</string>
        <string>--config</string>
        <string>__HOME__/.cordelia/config.toml</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>ThrottleInterval</key>
    <integer>10</integer>

    <key>StandardOutPath</key>
    <string>__HOME__/.cordelia/logs/node.stdout.log</string>

    <key>StandardErrorPath</key>
    <string>__HOME__/.cordelia/logs/node.stderr.log</string>

    <key>WorkingDirectory</key>
    <string>__HOME__/.cordelia</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>HOME</key>
        <string>__HOME__</string>
    </dict>
</dict>
</plist>
