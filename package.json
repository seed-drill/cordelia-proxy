{
  "name": "cordelia",
  "version": "0.1.0",
  "description": "Project Cordelia: Persistent dense memory system for Claude",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "cordelia": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node --esm src/server.ts",
    "test": "node --import tsx --test src/*.test.ts",
    "test:crypto": "node --import tsx --test src/crypto.test.ts",
    "test:http": "node --import tsx --test src/http-server.test.ts",
    "migrate": "node --import tsx src/migrate.ts",
    "rebuild-index": "node --import tsx src/rebuild-index.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:secrets": "bash scripts/secret-scan.sh",
    "ci": "npm run lint && npm run typecheck && npm test && npm run security:audit && npm run build",
    "dashboard": "node dist/http-server.js",
    "dashboard:dev": "node --import tsx src/http-server.ts",
    "sync": "node --import tsx scripts/sync-daemon.ts",
    "sync:setup": "node --import tsx scripts/setup-sync.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seed-drill/cordelia-proxy.git"
  },
  "keywords": [
    "mcp",
    "memory",
    "claude",
    "ai"
  ],
  "author": "Seed Drill",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/seed-drill/cordelia-proxy/issues"
  },
  "homepage": "https://github.com/seed-drill/cordelia-proxy#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@sentry/node": "^10.38.0",
    "better-sqlite3": "^12.6.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
